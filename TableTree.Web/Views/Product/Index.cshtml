@using TableTree.Web.ViewModels.Product;
@model IEnumerable<ProductViewModel>;

    <link rel="stylesheet" href="~/css/products.css"/>

@{
    ViewBag.Title = "All Products";
}

    <h2 class="text-center">@ViewBag.Title</h2>
    <hr />

    <div class="text-center row">
    @foreach (var product in Model)
    {
            <div class="card col-3 h-100" style="width: 20rem; ">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;"
                    alt="Game Image">
            }
            else
            {
                <img src="~/img/PH.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;"
                    alt="Placeholder Image">
            }
            <div class="card-body" style="height: calc(100% - 150px); overflow: auto;">
                <div class="row">
                    <div class="col-12">
                        <div class="title-wrapper" style="height: 6em; overflow: hidden;">
                            <h4 class="card-title mt-1">@product.Name</h4>
                            <p class="card-text">Price: @product.Price.ToString("C",
                            System.Globalization.CultureInfo.CreateSpecificCulture("fr-FR"))</p>
                        </div>
                    </div>
                </div>
                <div class="row gx-0">
                    <div class="col-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Favourites" asp-action="AddToFavourites" asp-route-id="@product.Id" method="post">
                                <input type="hidden" name="productId" value="@product.Id">
                                <button type="submit" style="background: none; border: none; cursor: pointer;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="svg bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                    </svg>
                            </form>
                        }
                    </div>
                    <div class="col-11">
                        <h5 class="card-title mt-1">@product.TreeType</h5>
                    </div>
                </div>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="row gx-0">
                    <div class="col-6 px-1">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                            class="btn btn-secondary btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Details</a>
                    </div>
                    <div class="col-6 px-1">
                        <div class="col-12">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input style="width:2.5em" type="number" name="quantity" id="quantity" size="4" max="9999"
                                    min="1" value="1" step="1"></input>
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-sm mb-2 w-50 fw-bold rounded btn-primary">Buy</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-6 px-1">
                        <form asp-controller="Product" asp-action="AddProductToStore" method="get">
                            <input type="hidden" name="productId" value="@product.Id" asp-for="@product.Id"
                                    asp-controller="Product" asp-action="AddProductToStore" asp-route-id="@product.Id"/>
                            <button class="btn btn-sm mb-2 w-100 fw-bold rounded btn-danger">Add To Store</button>
                        </form>
                    </div>
                    <div class="col-6 px-1">
                        <input type="hidden" asp-for="@product.Id" />
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                           class="btn btn-sm mb-2 w-100 fw-bold rounded btn-danger">Delete</a>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12 px-1">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                        class="btn btn-warning btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Details</a>
                </div>
            }
            </div>
    }
    </div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}