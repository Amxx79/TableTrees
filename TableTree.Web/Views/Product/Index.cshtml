@using TableTree.Web.ViewModels.Product;
@model IEnumerable<ProductViewModel>;

@{
    ViewBag.Title = "All Products";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var product in Model)
    {
            <div class="card col-3 h-100" style="width: 20rem; ">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                        <img src="@product.ImageUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Game Image">
            }
            else
            {
                        <img src="~/img/PH.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Placeholder Image">
            }
                <div class="card-body" style="height: calc(100% - 150px); overflow: auto;">
                    <div class="row">
                        <div class="col-12">
                            <div class="title-wrapper" style="height: 6em; overflow: hidden;">
                                <h4 class="card-title mt-1">@product.Name</h4>
                            </div>
                        </div>
                    </div>
                    <h5 class="card-title mt-1">@product.TreeType</h5>
                </div>

                <div class="row gx-0">
                    <div class="col-6 px-1">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-warning btn-sm mb-2 w-100 fw-bold rounded btn-dark-text">Details</a>
                    </div>
                    <div class="col-6 px-1">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm mb-2 w-100 fw-bold rounded btn-danger">Delete</a>
                    </div>
                </div>
            </div>
    }
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}