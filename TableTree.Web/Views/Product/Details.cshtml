@using TableTree.Web.ViewModels.Product;
@model ProductDetailsViewModel;

@{
    ViewBag.Title = "Product Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card mb-3">
        <img src="@Model.ImageUrl" class="card-img-top img-fluid" style="max-height: 200px; object-fit: contain;" alt="Game Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-title">Price: @Model.Price</p>
            <p class="card-text"><small class="text-muted">Category: @Model.Category.Name</small></p>
            <p class="card-text"><small class="text-muted">Type of Tree: @Model.TreeType.Name</small></p>
            <p class="card-text"><small class="text-dark">Description: @Model.Description</small></p>

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Stocks
                </button>
                <ul class="dropdown-menu">
                    @foreach (var store in Model.ProductStores)
                    {
                        <li class="dropdown-item">@store.Store.Address</li>
                    }
                </ul>
            </div>
        </div>

        <a asp-controller="Product" asp-action="Index" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Back to All Products</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-dark-text btn-rounded mb-2 w-100 p-3 fw-bold">Edit</a>
        }
        @if (User.IsInRole("GlobalAdmin"))
        {
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-rounded mb-2 w-100 p-3 fw-bold">Delete</a>
        }
    </div>
</div>

<hr />

<div class="mt-4">
    <h4>Comments</h4>
    <div class="mb-3">
        @if (Model.Comments != null && Model.Comments.Any())
        {
            <ul class="list-group">
                @foreach (var comment in Model.Comments)
                {
                    <li class="list-group-item">
                        <strong>@comment.ApplicationUser.UserName:</strong> @comment.CommentDescription
                        <br />
                        <small class="text-muted">Posted on: @comment.PostedOn.ToString("dd MMM yyyy HH:mm")</small>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No comments yet. Be the first to comment!</p>
        }
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <form asp-controller="Product" asp-action="AddCommentToProduct" method="post">
            <input type="hidden" name="ProductId" value="@Model.Id" />
            <div class="mb-3">
                <label for="Text" class="form-label">Add a Comment</label>
                <textarea class="form-control" id="Text" name="Text" rows="3" placeholder="Write your comment here..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
    }
    else
    {
        <p class="text-muted">Please <a asp-controller="Account" asp-action="Login">log in</a> to leave a comment.</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
