@using TableTree.Web.ViewModels.Product;
@model ProductDetailsViewModel;

<div class="container mt-4">
    <h2>Product Details</h2>

    <div class="card mt-3">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-3" style="max-width: 100%; height: auto;" />
            }

            <p><strong>Type of Tree:</strong> @Model.TreeType.Name</p>
            <p><strong>Category:</strong> @Model.Category.Name</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price</p>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>