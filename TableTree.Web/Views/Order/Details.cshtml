@using TableTree.Web.ViewModels.Order
@model OrderDetailsViewModel
<link rel="stylesheet" href="~/css/OrderDetails.css" />

<div class="order-details">
    <h2>Order Details</h2>
    <div class="details-grid">
        <div><strong>Order Number:</strong> @Model.SequenceNumber</div>
        <div><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</div>
        <div><strong>First Name:</strong> @Model.FirstName.ToString()</div>
        <div><strong>Last Name:</strong> @Model.LastName.ToString()</div>
        <div><strong>Phone Number:</strong> @Model.PhoneNumber.ToString()</div>
        <div><strong>City:</strong> @Model.ShippingCity.ToString()</div>
        <div><strong>Address:</strong> @Model.ShippingAddress.ToString()</div>
        <div><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</div>
    </div>
    <hr />
    <h3>Products</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Tree Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductsInOrder)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                    <td>@product.TreeType</td>
                </tr>
            }
        </tbody>
    </table>
</div>