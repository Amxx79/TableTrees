@using TableTree.Web.ViewModels.Order
@model OrderDetailsViewModel

<div class="order-details">
    <h2>Order Details</h2>
    <p><strong>Order Number:</strong> @Model.SequenceNumber</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
    <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
    <hr />
    <h3>Products</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Tree Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductsInOrder)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                    <td>@product.TreeType</td>
                </tr>
            }
        </tbody>
    </table>
</div>